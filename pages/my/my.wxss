/* pages/my/my.wxss */
.my-header {
    height: 40vh;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    border-bottom: 1rpx solid #555;
}
.my-url {
    width: 30vw;
    height: 30vw;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 auto;
}
.my-url-img {
    height: 100%;
    width: 100%;
}
.my-name {
    width: 60vw;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 20rpx;
    font-size: 36rpx;
    color: #f5f5f5;
}
.my-info-li {
    height: 120rpx;
    padding: 0 40rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #555;
    color: #f5f5f5;
}
.my-icon {
    width: 50rpx;
    height: 50rpx;
    margin-right: 40rpx;
}

.my-text-name {
    flex-grow: 1;
}
.my-text {
    flex-basis: 0 0 60rpx;
    text-align: right;
    color: #e98f36;
}
.click .my-text {
    color: #f5f5f5;
}
.click:active {
    background: #1890ff;
}
.my-next {
    width: 50rpx;
    height: 50rpx;
}
