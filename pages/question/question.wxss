/* pages/question/index.wxss */
.question-title {
    color: #e5e5e5;
    font-size: 40rpx;
    width: 100%;
    line-height: 60rpx;
    margin-bottom: 20rpx;
}
.question-text-wrap {
    padding: 40rpx;
    box-sizing: border-box;
    padding-top: 60rpx;
    text-align: center;
}
.question-wrap {
    position: absolute;
    width: 100%;
    height: 100%;
    border: 0;
    display: flex;
    flex-direction: column;
}
.question-content {
    height: calc(100% - 72vw);
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    justify-content: center;
    position: relative;
}
.question-point {
    position: absolute;
    left: 3vw;
    top: 0;
    color: #e5e5e5;
    font-size: 30rpx;
}
.question-answer {
    flex: 0 0 10vw;
    line-height: 10vw;
    width: 100%;
    border-bottom: 1px solid #b8b8b8;
    text-align: center;
    color: #e5e5e5;
    font-size: 40rpx;
    letter-spacing: 2rpx;
    color: #e98f36;
    position: relative;
}
.question-answer .error {
    transform: scaleX(1);
}
.line {
    margin: 0;
    height: 1px;
    border: none;
    background-color: #ff5722;
    position: absolute;
    left: 0;
    right: 0;
    bottom: -1px;
    transform: scaleX(0);
    transition: transform 0.45s cubic-bezier(0.23, 1, 0.32, 1);
}
.question-keyboard {
    padding: 4vw;
    box-sizing: border-box;
}
.question-keyboard .num-row {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-bottom: 4vw;
}
.question-keyboard .num-row:last-child {
    margin: 0;
}
.question-keyboard .num-icon {
    background: none;
    border: 0;
}
.question-image {
    width: 80vw;
}
.delete-icon {
    width: 11vw;
    height: 11vw;
}
.tip-icon {
    width: 10vw;
    height: 11vw;
}
.tip-icon-home {
    width: 9vw;
    height: 9vw;
}
.share-icon {
    width: 9vw;
    height: 12vw;
    margin-left: -2px;
    margin-top: 4px;
}
.question-keyboard .sure {
    background: #e98f36;
    color: #e5e5e5;
}
.num-btn {
    width: 15.2vw;
    height: 15.2vw;
    background: #e5e5e5;
    border-radius: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 40rpx;
    background: #e5e5e5;
    transition: all 0.1s linear;
    border: 1px solid #261c33;
}
.num-btn:not(.num-icon):active {
    background-color: #e98f36;
    color: #e5e5e5;
}
.num-icon:active {
    opacity: 0.8;
}
/* 提示框 */
.tips-wrap {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.65);
    z-index: 10;
    display: flex;
    justify-content: center;
    align-items: center;
}
.tips-content {
    width: 100%;
    height: 60vh;
    border-radius: 20rpx 20rpx 0 0;
    background-color: #e5e5e5;
    position: relative;
    position: absolute;
    bottom: 0;
}
.tips-header {
    height: 10vh;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    border-bottom: 1px solid #d9d9d9;
}
.tips-close {
    width: 32rpx;
    height: 32rpx;
}
.tips-close-btn {
    width: 10vh;
    height: 10vh;
    position: absolute;
    right: 0;
    top: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}
.tips-header-line {
    position: absolute;
    width: 100%;
    left: 5px;
    height: 1px;
    background: #e98f36;
    bottom: 0;
}
.tips-logo {
    height: 56rpx;
    width: 56rpx;
}
.tips-title {
    font-size: 40rpx;
    color: #e98f36;
    margin-left: 10rpx;
    margin-top: 4rpx;
}
.tips-text {
    text-align: justify;
    line-height: 54rpx;
    font-size: 34rpx;
    height: 50vh;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}
.tips-text-padding {
    padding: 50rpx;
}
.tips-inner {
    line-height: 60rpx;
}
.tips-close-wrap {
    width: 100%;
    position: absolute;
    bottom: 3vh;
}
.tip-icon-wrap {
    position: relative;
}
.tips-num {
    position: absolute;
    bottom: 8rpx;
    right: 8rpx;
    width: 4vw;
    height: 4vw;
    text-align: center;
    line-height: 4vw;
    border-radius: 50%;
    font-size: 22rpx;
    color: #e98f36;
}
.share-btn {
    width: 100%;
    height: 100%;
    background: none;
    display: flex;
    align-items: center;
}
.share-btn::after {
    border: none;
}
.correct-content {
    width: 60vw;
    height: 45vw;
    border-radius: 10rpx;
    background-color: #e5e5e5;
    position: relative;
    overflow: hidden;
}
.correct-logo {
    width: 20vw;
    height: 20vw;
    display: block;
    margin: 5vw auto 4vw;
}
.correct-close-wrap {
    width: 100%;
    position: absolute;
    bottom: 0;
}
.correct-close {
    font-size: 36rpx;
    height: 15vw;
    margin: 0 auto;
    border-top: 1px solid #ccc;
    color: #2aa515;
    text-align: center;
    line-height: 15vw;
}

.correct-close:active {
    background: #2aa515;
    color: #fff;
}
.correct-text {
    color: #2aa515;
    font-size: 30rpx;
    text-align: center;
}
