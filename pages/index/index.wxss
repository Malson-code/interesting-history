/**index.wxss**/
.index-wrap {
}
.index-title {
    margin: 5vh auto 14vh;
    font-size: 50rpx;
    text-align: center;
    color: #e1e1e1;
}
.index-btns {
    width: 86vw;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.index-btn {
    margin-bottom: 6.6vw;
    width: 40vw;
    height: 40vw;
}
.index-btn-style {
    background-color: #20272c;
    height: 100%;
    border-radius: 20rpx;
    font-size: 32rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}
.index-btn-style:active {
    background-color: #1890ff;
    /* transition: all 0.1s linear; */
    color: #fff;
}
.index-logo {
    height: 15vh;
}
.index-about {
    text-align: center;
    font-size: 30rpx;
}
.index-btn-icon {
    width: 10vw;
    height: 10vw;
    margin-top: 36rpx;
}
.btn1,
.btn3 {
    animation: leftIn 0.5s cubic-bezier(0, 0, 0.37, 0.74);
}
.btn2,
.btn4 {
    animation: rightIn 0.5s cubic-bezier(0, 0, 0.37, 0.74);
}
@keyframes leftIn {
    0% {
        transform: translateX(-100px);
    }
    100% {
        transform: translateX(0);
    }
}
@keyframes rightIn {
    0% {
        transform: translateX(100px);
    }
    100% {
        transform: translateX(0);
    }
}
.index-user-btn {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 2;
    background: transparent;
}
